{% comment %}
  Trust & Certification Section
  Save this as: sections/trust-certification.liquid
{% endcomment %}

<style>
  .trust-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
    border-top: 1px solid {{ section.settings.border_color }};
    border-bottom: 1px solid {{ section.settings.border_color }};
  }

  .trust-container {
    max-width: {{ section.settings.section_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  {% if section.settings.show_heading %}
  .trust-heading {
    text-align: center;
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 600;
    margin-bottom: 40px;
    color: {{ section.settings.heading_color }};
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  {% endif %}

  .trust-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.gap_size }}px;
    align-items: start;
  }

  .trust-item {
    text-align: center;
    padding: {{ section.settings.item_padding }}px;
    background: {{ section.settings.card_background }};
    border-radius: {{ section.settings.border_radius }}px;
    border: 1px solid {{ section.settings.card_border_color }};
    transition: all 0.3s ease;
  }

  .trust-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    border-color: {{ section.settings.hover_border_color }};
  }

  .trust-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin: 0 auto 15px;
    color: {{ section.settings.icon_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .trust-icon svg {
    width: 100%;
    height: 100%;
    stroke: currentColor;
    fill: none;
    stroke-width: 1.5;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .trust-icon.filled svg {
    fill: currentColor;
    stroke: none;
  }

  .trust-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: 600;
    margin-bottom: 8px;
    color: {{ section.settings.title_color }};
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .trust-description {
    font-size: {{ section.settings.description_size }}px;
    line-height: 1.5;
    color: {{ section.settings.description_color }};
    margin: 0;
  }

  @media (max-width: 1024px) {
    .trust-grid {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
    }
  }

  @media (max-width: 768px) {
    {% if section.settings.mobile_slider %}
    .trust-grid {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      gap: 15px;
      padding-bottom: 10px;
      scrollbar-width: thin;
      scrollbar-color: {{ section.settings.icon_color }} transparent;
    }

    .trust-grid::-webkit-scrollbar {
      height: 6px;
    }

    .trust-grid::-webkit-scrollbar-track {
      background: transparent;
    }

    .trust-grid::-webkit-scrollbar-thumb {
      background: {{ section.settings.icon_color }};
      border-radius: 10px;
    }

    .trust-item {
      flex: 0 0 85%;
      scroll-snap-align: center;
      padding: 20px 15px;
    }
    {% else %}
    .trust-grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: 15px;
    }

    .trust-item {
      padding: 20px 15px;
    }
    {% endif %}

    .trust-icon {
      width: 45px;
      height: 45px;
    }

    .trust-heading {
      font-size: {{ section.settings.heading_size | minus: 6 }}px;
      margin-bottom: 30px;
    }
  }
</style>

<section class="trust-section">
  <div class="trust-container">
    {% if section.settings.show_heading and section.settings.heading != blank %}
      <h2 class="trust-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="trust-grid">
      {% for block in section.blocks %}
        <div class="trust-item" {{ block.shopify_attributes }}>
          <div class="trust-icon {% if block.settings.filled_icon %}filled{% endif %}">
            {% case block.settings.icon %}
              {% when 'shield-check' %}
                <svg viewBox="0 0 24 24">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                  <polyline points="9 12 11 14 15 10"/>
                </svg>
              {% when 'certificate' %}
                <svg viewBox="0 0 24 24">
                  <circle cx="12" cy="8" r="6"/>
                  <path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"/>
                </svg>
              {% when 'lock' %}
                <svg viewBox="0 0 24 24">
                  <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                </svg>
              {% when 'return' %}
                <svg viewBox="0 0 24 24">
                  <polyline points="9 14 4 9 9 4"/>
                  <path d="M20 20v-7a4 4 0 0 0-4-4H4"/>
                </svg>
              {% when 'shipping' %}
                <svg viewBox="0 0 24 24">
                  <path d="M16 3h4a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2h-1"/>
                  <path d="M16 16H3V5a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v11Z"/>
                  <circle cx="7.5" cy="19" r="2.5"/>
                  <circle cx="17.5" cy="19" r="2.5"/>
                </svg>
              {% when 'diamond' %}
                <svg viewBox="0 0 24 24">
                  <path d="M2.7 10.3a2.41 2.41 0 0 0 0 3.41l7.59 7.59a2.41 2.41 0 0 0 3.41 0l7.59-7.59a2.41 2.41 0 0 0 0-3.41L13.7 2.71a2.41 2.41 0 0 0-3.41 0Z"/>
                </svg>
              {% when 'award' %}
                <svg viewBox="0 0 24 24">
                  <circle cx="12" cy="8" r="7"/>
                  <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"/>
                </svg>
              {% when 'users' %}
                <svg viewBox="0 0 24 24">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
              {% when 'clock' %}
                <svg viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
              {% when 'heart' %}
                <svg viewBox="0 0 24 24">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                </svg>
              {% when 'package' %}
                <svg viewBox="0 0 24 24">
                  <path d="M12.89 1.45l8 4A2 2 0 0 1 22 7.24v9.53a2 2 0 0 1-1.11 1.79l-8 4a2 2 0 0 1-1.79 0l-8-4a2 2 0 0 1-1.1-1.8V7.24a2 2 0 0 1 1.11-1.79l8-4a2 2 0 0 1 1.78 0z"/>
                  <polyline points="2.32 6.16 12 11 21.68 6.16"/>
                  <line x1="12" y1="22.76" x2="12" y2="11"/>
                </svg>
              {% when 'check-circle' %}
                <svg viewBox="0 0 24 24">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                  <polyline points="22 4 12 14.01 9 11.01"/>
                </svg>
            {% endcase %}
          </div>

          {% if block.settings.title != blank %}
            <h3 class="trust-title">{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.description != blank %}
            <p class="trust-description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

